<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    </style>

    <style name="OitiButtonStyle" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/ft_primary_button_background</item>
        <item name="font">@font/gotham_bold</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundColor">@color/oiti_green</item>
        <item name="backgroundTint">@color/oiti_green</item>
    </style>

    <style name="OitiSecondaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="font">@font/gotham_bold</item>
        <item name="android:background">@drawable/ft_secondary_button_background</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/oiti_green</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="OitiDocButtonStyle" parent="OitiButtonStyle">
        <item name="backgroundColor">@color/doc_green</item>
        <item name="backgroundTint">@color/doc_green</item>
    </style>

    <style name="OitiDocSecondaryButtonStyle" parent="OitiSecondaryButtonStyle">
        <item name="android:textColor">@color/doc_green</item>
    </style>

    <style name="OitiProgressBar">
        <item name="colorAccent">@color/brand_color_primary_pure</item>
    </style>

    <style name="OitiBottomSheet">
        <item name="android:background">@drawable/ft_bottom_sheet_background</item>
        <item name="android:padding">24dp</item>
        <item name="elevation">150dp</item>
    </style>

    <style name="OitiButton">
        <item name="font">@font/inter_bold</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_size_xs</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="OitiPrimaryButton" parent="OitiButton">
        <item name="android:background">@drawable/ft_primary_button_background</item>
        <item name="android:textColor">@drawable/ft_primary_button_text_color</item>
    </style>

    <style name="OitiSecondaryButton" parent="OitiButton">
        <item name="android:background">@drawable/ft_secondary_button_background</item>
        <item name="android:textColor">@drawable/ft_secondary_button_text_color</item>
    </style>

</resources>
